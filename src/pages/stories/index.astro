---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { getStories } from "../../lib/strapi";

const stories = await getStories();
---

<Layout title="Stories" description="Stories and insights from the world of residential ocean living.">
  <Header />
  <main>
    <!-- Hero -->
    <section class="relative py-20 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-b from-ocean-dark to-navy"></div>
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="font-heading text-4xl sm:text-5xl font-bold text-white mb-4">
          Stories from the Sea
        </h1>
        <p class="text-lg text-white/70 max-w-2xl mx-auto">
          Read about life aboard residential ships, from personal experiences to industry insights.
        </p>
      </div>
    </section>

    <!-- Stories Grid -->
    <section class="py-16 bg-theme-primary">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {stories.map((story) => (
            <a
              href={`/stories/${story.slug}`}
              class="group block rounded-2xl overflow-hidden bg-theme-card border border-theme hover:border-gold/30 hover:-translate-y-1 transition-all duration-300 hover:shadow-xl hover:shadow-gold/5"
            >
              <div class="h-48 bg-gradient-to-br from-ocean-dark to-navy flex items-center justify-center">
                <svg class="w-16 h-16 text-ocean-light/30" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
                  <path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              </div>
              <div class="p-6">
                <h2 class="font-heading text-lg font-bold text-theme-primary group-hover:text-accent-primary transition-colors mb-3 line-clamp-2">
                  {story.title}
                </h2>
                <p class="text-theme-secondary text-sm leading-relaxed line-clamp-3 mb-4">
                  {story.excerpt}
                </p>
                <div class="flex items-center justify-between text-xs text-theme-muted">
                  <span>By {story.author}</span>
                  {story.ship && (
                    <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full bg-accent-primary/10 text-accent-primary">
                      <svg class="w-3 h-3" viewBox="0 0 32 32" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M4 22 C4 22 8 14 16 14 C24 14 28 22 28 22" />
                        <path d="M2 22 L30 22" />
                      </svg>
                      {story.ship.name}
                    </span>
                  )}
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
